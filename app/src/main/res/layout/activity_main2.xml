<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="Day\\Time"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="8:00-10:00"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="10:00-12:00"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="1:00-3:00"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="3:00-5:00"
            android:gravity="center"
            android:layout_weight="1"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="Monday"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:id="@+id/M1"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/M2"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/M3"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"
            android:id="@+id/M4"
            android:layout_weight="1"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="Tuesday"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/T1"
            android:gravity="center" />

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"
            android:id="@+id/T2"
            android:layout_weight="1"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"
            android:id="@+id/T3"
            android:layout_weight="1"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"
            android:id="@+id/T4"
            android:layout_weight="1"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="Wednesday"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/W1"
            android:gravity="center" />

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"
            android:id="@+id/W2"
            android:layout_weight="1"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/W3"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:id="@+id/W4"
            android:gravity="center"
            android:layout_weight="1"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="Thursday"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/Th1"
            android:gravity="center" />

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"
            android:id="@+id/Th2"
            android:layout_weight="1"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"
            android:id="@+id/Th3"
            android:layout_weight="1"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"
            android:id="@+id/Th4"
            android:layout_weight="1"
            />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="Friday"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/F1"
            android:gravity="center" />

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"
            android:id="@+id/F2"
            android:layout_weight="1"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"
            android:id="@+id/F3"
            android:layout_weight="1"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:gravity="center"
            android:id="@+id/F4"
            android:layout_weight="1"
            />
    </TableRow>
</TableLayout>